<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#DDDBDE"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout

                android:id="@+id/timerwhite"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/timerwindow"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="45dp">

                    <TextView
                        android:id="@+id/schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:fontFamily="@font/berkshire_swash"
                        android:text="Schedule"
                        android:textColor="#000000"
                        android:textSize="22sp" />
                </LinearLayout>

                <RelativeLayout

                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginTop="65dp">

                    <ImageView
                        android:id="@+id/card"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="50dp"
                        android:layout_marginBottom="20dp"
                        android:elevation="10dp"
                        android:src="@drawable/timecards" />

                    <ImageView
                        android:id="@+id/card1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignLeft="@+id/card"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="85dp"
                        android:layout_marginBottom="20dp"
                        android:elevation="10dp"
                        android:src="@drawable/timecards" />

                    <ImageView
                        android:id="@+id/card2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignLeft="@+id/card1"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="85dp"
                        android:layout_marginBottom="20dp"
                        android:elevation="10dp"
                        android:src="@drawable/timecards" />

                    <ImageView

                        android:id="@+id/card3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignLeft="@+id/card2"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="85dp"
                        android:layout_marginBottom="20dp"
                        android:elevation="10dp"
                        android:src="@drawable/timecards" />

                    <TextView
                        android:id="@+id/days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="63dp"
                        android:layout_marginTop="74dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Days"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="145dp"
                        android:layout_marginTop="74dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Hours"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/Min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="240dp"
                        android:layout_marginTop="74dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Min"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="325dp"
                        android:layout_marginTop="74dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Sec"
                        android:textColor="#000000" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp">


                    <TextView
                        android:id="@+id/textremaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="95dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/alike_angular"
                        android:text="Remaining for your"
                        android:textColor="#4B4B51"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/pandingtask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/textremaining"
                        android:fontFamily="@font/alike_angular"
                        android:text="Azithrom 500(Tb)"
                        android:textColor="#D83738"
                        android:textSize="13sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/lightblueshade" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/darkgreycapsules"
                android:elevation="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/usericon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"


                        android:src="@drawable/usericon" />

                    <TextView
                        android:id="@+id/usernamemain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/usericon"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="75dp"
                        android:layout_marginBottom="38dp"
                        android:fontFamily="@font/vidaloka"
                        android:text="Suman Sekhar Deka"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/currentuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/usericon"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="77dp"
                        android:layout_marginBottom="25dp"
                        android:fontFamily="@font/vidaloka"
                        android:text="Current User"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/greenicon"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_alignTop="@+id/usernamemain"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/usernamemain"
                        android:src="@android:drawable/presence_online" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/darkgreycapsules"
                android:elevation="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/darkergreycapsule">

                    <TextView
                        android:id="@+id/activityrecords"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cambo"
                        android:gravity="center"
                        android:text="Activity Records"
                        android:textColor="#FFF2E1" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/stats"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/stats" />

                    <ImageView
                        android:id="@+id/missed"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_alignLeft="@+id/stats"
                        android:layout_marginLeft="120dp"
                        android:src="@drawable/missed" />

                    <ImageView
                        android:id="@+id/add"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_alignLeft="@+id/missed"
                        android:layout_marginLeft="120dp"
                        android:src="@drawable/add" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/darkgreycapsules"
                android:elevation="10dp"

                android:layout_marginBottom="20dp"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
